<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="0dp"
        android:right="-1dp"
        android:top="-1dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#7190da"
                android:dashGap="3dp"
                android:dashWidth="5dp" />

            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>