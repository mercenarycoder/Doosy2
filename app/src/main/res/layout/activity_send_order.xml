<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SendOrder">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/themecolor"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>



    <ScrollView
        android:id="@+id/scrollv1"
        android:layout_below="@id/my_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            app:cardCornerRadius="5.8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18.7dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lay1"
                    android:orientation="horizontal"
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lay3"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/i1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_pickup"/>

                            <TextView
                                android:id="@+id/pickupadd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phoenix Market City Phoenix Market Phoenix Market City Phoenix Market City"
                                android:textSize="13.4sp"
                                android:textColor="#323643"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:id="@+id/lay4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/i3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_lens"
                                />


                            <TextView
                                android:id="@+id/deliveryadd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home new shiv nagar Colony Bhopal"
                                android:textSize="13.4sp"
                                android:textColor="#323643"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CBCBCB"/>

                <LinearLayout
                    android:layout_margin="7dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="Package content" />

                        <TextView
                            android:id="@+id/packagecontent"
                            android:text="Documents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="Contact no." />
                        <TextView
                            android:id="@+id/mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="555555"
                            />

                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CBCBCB"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charges"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="9dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ "
                        android:textSize="17sp"
                        />

                    <TextView
                        android:id="@+id/charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/discountprice"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/rippleEffectColor"
                        android:textSize="19sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount will be deducted from doosy wallet"
                    android:paddingBottom="10dp"
                    android:textColor="@color/rippleEffectColor"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CBCBCB"/>

                <LinearLayout
                    android:layout_margin="7dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_title"
                        android:text="Task detail."
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/txt_dtl"
                        android:layout_marginBottom="15dp"
                        android:text="Task detail."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sendorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/signin_rect"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingTop="12dp"
            android:text="Confirm Request"
            android:textColor="#ffffff"
            android:textSize="16dp" />

    </LinearLayout>


</RelativeLayout>