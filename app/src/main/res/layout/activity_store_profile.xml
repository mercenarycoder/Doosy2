<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblack"
    app:cardBackgroundColor="@color/silver"
    app:cardElevation="10dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/themecolor"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_below="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/store_image_pro"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:src="@drawable/box"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:background="@drawable/rectangle_whitetop_cure"
                android:orientation="vertical"
                android:paddingBottom="16.6dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16.7dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:orientation="vertical"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/i12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/circle_blueoutline" />

                            <RelativeLayout
                                android:layout_below="@+id/i12"
                                android:layout_above="@+id/j12"
                                android:id="@+id/dotli"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/dotted_lineblue"
                                android:layerType="software"
                                android:orientation="vertical" />
                            <ImageView
                                android:id="@+id/j12"
                                android:layout_marginBottom="45dp"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_lens" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/txtmerchant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:letterSpacing="0.0525"
                                    android:text="Pickup Address"
                                    android:fontFamily="@font/sfpro_display_medium"
                                    android:textColor="@color/black"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/txtcuisine"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:letterSpacing="0.0525"
                                    android:text="Sweets, Cakes, Chocolate"
                                    android:fontFamily="@font/sfpro_display_medium"
                                    android:textColor="@color/silver"
                                    android:textSize="12sp" />


                                <TextView
                                    android:id="@+id/txtmerchantadd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:letterSpacing="0.0525"
                                    android:lineSpacingExtra="2dp"
                                    android:fontFamily="@font/sfpro_display_medium"
                                    android:text="New Shiv Nagar Colony Bhopal"
                                    android:textColor="@color/silver"
                                    android:textSize="14.5sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/callask"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/phone_call" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:letterSpacing="0.0525"
                                    android:lineSpacingExtra="5dp"
                                    android:text="Ask for item"
                                    android:fontFamily="@font/sfpro_display_medium"
                                    android:textColor="@color/silver"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="13.7dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/viewline" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13.7dp"
                                android:layout_marginTop="16.8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:letterSpacing="0.0525"
                                    android:text="Delivery Address"
                                    android:fontFamily="@font/sfpro_display_medium"
                                    android:textColor="@color/black"
                                    android:textSize="17sp" />

                                <EditText
                                    android:id="@+id/edittxtAdd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:letterSpacing="0.0525"
                                    android:lineSpacingExtra="2dp"
                                    android:fontFamily="@font/sfpro_display_medium"
                                    android:text=""
                                    android:hint="Enter Delivery address..."
                                    android:textColor="@color/silver"
                                    android:textSize="14.5sp"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginTop="16.8dp"
                    android:layout_marginRight="16.7dp"
                    android:background="@color/viewline" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:baselineAligned="false">
                <TextView
                    android:text="What you need from this store?"
                    android:layout_weight="0.49"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
    <TextView
        android:id="@+id/view_menu2"
        android:text="View Menu"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/button_line_border2"
        android:layout_marginLeft="15dp"
        android:padding="4dp"
        android:textColor="@color/themecolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

                <EditText
                    android:id="@+id/txttaskDetail"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="What you need? e.g. Badam shake"
                    android:inputType="textMultiLine"
                    android:padding="8dp"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginRight="16.7dp"
                    android:text=""
                    android:maxLength="400"
                    android:background="@drawable/edittext_square"
                    android:textStyle="normal"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:gravity="start"
                    />

                <Button
                    android:id="@+id/nextact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="16.7dp"
                    android:layout_marginBottom="120dp"
                    android:background="@color/orange"
                    android:elevation="0.8dp"
                    android:letterSpacing="0.0525"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="Next"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18.7sp" />
            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
